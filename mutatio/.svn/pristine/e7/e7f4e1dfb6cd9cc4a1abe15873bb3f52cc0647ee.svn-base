#sub_title_div {
    border-top: 2px solid gray;
    border-bottom: 2px solid gray;
}

.sub_title { /* 2단계 */
    width: 1280px;
    height: 90px;
    background-color: tomato;
    display: flex;
    background-color: #fff;
}
.sub_title > li > div {
    background-color: violet;
    width: 315px;
    height: 60px;
    text-align: center;
    background-color:#fff;
    padding-top: 18px;
    margin-top: 5px;
}
.sub_title > li > div > h3 {
    height: 40px;
    padding-top: 10px;
    cursor: pointer;
    /* background-color: greenyellow; */
    /* box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5); */

}
.sub_title > li:not(:last-child) > div > h3 {
    border-right: 1px solid gray;
}


@media(max-width:1200px) {
    .sub_title {
        width: 800px;
        height: 90px;
        text-align: center;
    }
    .sub_title > li {
        margin-left: 0px;
        margin-right: 0px;
    }
    .sub_title > li > div {
        width: 200px;
        height: 60px;
        padding-top: 15px;
    }

}