#searchBackground {
    width: 100%;
    height: 150px;
    margin-top: 20px; 
    margin-bottom: 20px;
    text-align: center;
    
    /* 수직 정렬 */
    display: flex;
    align-items: center;
}
.searchArea {
    width: 860px;
    height: 60px;
    padding: 20px;
    text-align: center;
    display: flex;
}
.searchArea > input {
    width: 100%;
    height: 50px;
    padding-left: 15px;
    border-radius: 5px;
    border: 5px solid gray;
    font-size: 19px;
    font-weight: bold;
}
.searchArea > button {
    display: inline-block;
    top: -2px;
    width: 80px;
    height: 65px;
    margin: 0px;
    color: white;
    font-weight: bold;
    font-size: 18px;
    cursor: pointer;
    position: relative;
    background-color: gray;
    border: 3px solid;
    border-radius: 7px;
}


