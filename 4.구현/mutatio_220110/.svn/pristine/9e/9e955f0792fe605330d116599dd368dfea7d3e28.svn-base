.contents{
    width: 100%;
    height: 1000px;
    display: flex;
}


.center, .left, .right  {
	width: 33%;
	height: 100%;
    margin-top: 50px;
}

.textArea {
    padding: 50px;
    border: solid 2px black;
    border-radius: 10px;
	
    width: 33%;
    height: auto;

    position: relative;
    right:  0px;
    margin: 0;
}
.myInfo_form {
    position: relative;
    top: 40%;
    width: 400px;
    z-index: 2;
}
.myInfo_form > h1 {
    color: black;
    margin-bottom: 35px;
}

.int-area > select {
	width: 120px;
	background-color: #fff;
}

.int-area {
    width: 400px;
    height: 90px;
}
.int-area input {
    width: 100%;
    padding: 20px 10px 10px;
    background-color: transparent;
    border: none;
    border-bottom: 1px solid #999;
    font-size: 18px;
    color: black;
}
/* 아이디 / 비번 라벨 */
div.int-area > label {
    /* 이동할 때 position */
    position: relative;
    top: -40px;
    font-size: 18px;
    color: black;
    left: 10px;
}



/* label of job */
.job-area {
	margin-top: 40px;
}
.job-area > label {
	position: relative;
	left: -100px;
	top: -30px;
	font-size: 13px;
    color: #166cea;
}


/* 아이디 라벨 */
.myInfo_form label[for="mem_id"] {
    left: 10px;
}
/* 버튼 */
.btn-area > button {
    width: 100%;
    height: 50px;
    color: #fff;
    font-size: 20px;
    border: none;
    border-radius: 20px;
    background-color: #166cea;
}
/* 하단 링크태그 정렬 */
.caption_ul{
    /* 정렬에는 display */
    display: flex;
    margin-top: 20px;
}
.caption_ul > li {
    list-style: none;
    font-size: 20px;
}
.caption_ul a {
    font-size: 20px;
    color: black;
    text-decoration: none;
}
/* input 안 텍스트 데코 */
.int-area input:focus + label {
    top: -55px;
    font-size: 13px;
    color: #166cea;
}
/* input 에 required 가 들어가 있어서 가능 */
.int-area input:valid + label {
    top: -60px;
    font-size: 13px;
    color: #166cea;
}
.int-area label {
    /*
        tansition all 은 top -52px로 이동될 때
        모든 옵션(all)에 대해서 애니메이션 효과를 발생.
        .5초 동안 ease 효과를 주어 천천히 시작되어 
        중간에 빨라지고 다시 느려지게 함
    */
    transition: all, .5s ease;
}
/* 해당 태그에 warning 속성이 있어야 함 */
.int-area label.warning{
    color: red;
    animation-duration: .2s ease;
    animation-iteration-count: 3;
}

/* 추가 */
#btn_id:active{
    color: gray;
}
.caption_ul a:active {
    color: gray;
}
.div_board_write > input:active {
    transform:translate(2px, 2px);
}


.checkList {
	padding: 5px 5px 10px 30px;
	margin-top: 10px;
	margin-right: 25px;
}
.checkList input {
	display: inline-block;
	width:30px;
}

/* 회원정보 박스 */
.center > .textArea {
	width: 400px;
	height: 800px;
	position: center;
}
.myInfo_form {
	top: 10px;
}
/* 직업  */
.job-area > label {
	color: #166cea;
	left: 13px;
	top: -56px;
}
/* select 박스 */
.job-area > #mem_jb {
	width: 415px;	
}


/* 관심분야 */
.checkList {
	background-color: transparent;
	width:330px;
	height:60px;
	margin-left: 30px;
	padding: 3px 4px 2px 2px;
}

.cc-area > label {
	font-size: 13px;
	color: #166cea;
	margin-left: 12px;
	top: -56px;
}

.checkList1 {
	font-size: 13px;
	background-color: transparent;
	margin-left: 10px;		
	top: 10px;
}
.checkList2 {
	font-size: 13px;
	background-color: transparent;
	margin-left: 10px;	
	top: 10px;
}

/* id 수정 */
.id-area {
	background-color: transparent;
	width: 420px;
	height: 50px;
	margin-top: 5px;
}

.id-area > label {
	font-size: 13px;
	color: #166cea;	
	top: -15px;
	position: relative;
}

.id-area > p {
    top: -15px;
    position: relative;
}









.modal {
	/* display: none; */
	position:fixed;
	z-index: 2;
    top: 0; right: 0%; bottom: 0; left: 0;
	overflow: auto;
	background-color: rgba(0, 0, 0, 0.3);
}

.modal_content {
	background-color: #fefefe;
    position: fixed;
    top: 0; right: 0%; bottom: 0; left: 0;
    
	width: 420px;
    height: 260px;

	margin: auto;
	padding: 20px;

    text-align: center;

    padding-top: 80px;
    border-radius: 7px;
}

.close {
	color: #aaa;
	float: right;
}

.modal label {
    display: block;
}
.modal label+input{
	width: 100%;
}
div.modal_content > div {
    width: 180px;
    margin: auto;
    text-align: left;
    margin-top: 20px;
}

.modal_save {
    text-align: center !important;
}


.modal_content > span {
	color: black;
	font-weight: bold;
	cursor: pointer;
	position: relative;
	top: -70px;
	right: -5px;
}



















































