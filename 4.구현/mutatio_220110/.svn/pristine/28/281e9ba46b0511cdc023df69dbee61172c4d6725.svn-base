/* modal */
.modal {
	display: none;
	position:fixed;
	z-index: 2;
    top: 0; right: 0%; bottom: 0; left: 0;
	overflow: auto;
	background-color: rgba(0, 0, 0, 0.3);
}

.modal_content {
	background-color: #fefefe;
    position: fixed;
    top: 0; right: 0%; bottom: 0; left: 0;
    
	width: 420px;
    height: 260px;

	margin: auto;
	padding: 20px;

    text-align: center;

    padding-top: 80px;
    border-radius: 7px;
}

.close {
	color: #aaa;
	float: right;
}

.modal label {
    display: block;
}
.modal label+input{
	width: 100%;
}
div.modal_content > div {
    width: 180px;
    margin: auto;
    text-align: left;
    margin-top: 20px;
}

.modal_save {
    text-align: center !important;
}

.modal_content > span {
	color: black;
	font-weight: bold;
	cursor: pointer;
	position: relative;
	top: -70px;
	right: -5px;
}

.warning {
	color: red;
}

















































