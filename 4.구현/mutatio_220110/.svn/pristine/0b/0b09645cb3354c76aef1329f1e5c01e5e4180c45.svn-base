<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mutatio.sis.thesis.dao.IFactorDao">
	<select id="getFactorList" resultType="com.mutatio.sis.thesis.vo.ThesisVO">
		SELECT ROWNUM
       , thesis.thes_no
       , thes_auth
       , thes_title
       , thes_href
       , thes_imp_factor
       , thes_pu_date
       , thes_category
       , thes_cost
       , thes_page
       , thes_summary
FROM (
    WITH t AS (
        SELECT thes_no
               , MAX(thes_auth) thes_auth_1
               , COUNT(thes_auth) cnt
        FROM author
        GROUP BY thes_no
    )
    SELECT thes_no
           , CASE
        WHEN cnt = 1 THEN
            thes_auth_1
        ELSE
            thes_auth_1
            || ' and '
            || CAST(cnt - 1 AS VARCHAR(20))
            || ' other'
    END AS thes_auth
    FROM t
) t1
     , thesis
WHERE thesis.thes_no = t1.thes_no
      AND ROWNUM BETWEEN 1 AND 100
ORDER BY thesis.thes_imp_factor DESC
	</select>
	
	<select id="getInterestList" parameterType="String" resultType="String">
		select code.comm_nm
		from code
		    , (
		      select m.mem_id, cc.con_code
		      from member m , concern_code cc
		      where m.mem_id = cc.mem_id 
		      )t1
		where code.comm_cd = t1.con_code
		and t1.mem_id=#{memId }
	</select>
</mapper>