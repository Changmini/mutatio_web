*{margin:0 auto; padding: 0;}

body {
    /*
      vh는 높이값의 100분 1단위입니다.
      예를 들어 브라우저 높이값이 900px
      일 때 vh는 9px라는 뜻입니다.
    */
    height: 100vh;
    text-align: center;
    background: url("../images/login.jpg"); 
    background-size: cover;
}

.join_section > h1 > a{
	font-size: 40px;
	font-weight: bold;
}

.join_content > div {
	margin-bottom: 9px;
}

 .join_form { 
    margin-top: 18px;
    width: 400px;
    height: 850px;
    background-color: #fff;
    margin-bottom: 16px;
    background-color: rgba(255, 255, 255, 0.8);
    border-radius: 15px;
} 

.join_form > h1 {
	margin-top: 20px;
	font-size: 30px;
	
}
.join_form > a {
