
/*CSS for a really simple responsive grid*/
#searchBackground{font-family:Open Sans; color:#555555;}

//--------------------------------------------------
#wrap{
	text-align: center;
}

.page-header{
	margin-top: 20px;
	height: 700px;
	text-align : center;
}

.form-in {
	width: 1000px;
	height: 100%;
}
.form-in > h2 {
	margin:10px;
}

select{
	margin-right : 40px;
	padding : 5px;
}

input[type=text]{
	margin-right : 40px;
	padding : 5px;
	border-radius : 9px;
	border-width : thin;
	width : 700px;
}

#div_cate {
	width:100%;
	text-align: left;
	margin: 10px;
	display : inline-block;
}
.div_title {
	width:100%;
	text-align: left;
	margin: 10px;
	display : inline-block;
}
.div_thesNo {
	width:100%;
	text-align: left;
	margin: 10px;
	display : inline-block;
}

.pull-left{
	margin: 30px;
	text-align: center;
}
.pull-left > button {
	margin-right: 30px;
}
/*버튼  */
/*SEA GREEN BUTTON STYLES*/		
button{
	padding : 3px;
}

.btn.btn-sea{background-color: #2FAF53; border-color: #2FAF53; 
              color : white;
              font-weight : bold;
				padding-top : 4px;
				padding-bottom : 4px;
				padding-right : 8px;
				padding-left : 8px;
				border-radius : 5px;
				font-size : 14px;
}
.btn.btn-sea:hover{background-color:#01a183;}
.btn.btn-sea:active{ top: 3px; outline: none; -webkit-box-shadow: none; box-shadow: none;}


