<script>
<%MemberVO USER = (MemberVO)session.getAttribute("USER_INFO");%>
	
	// 윈도우 스크롤 작동시 메뉴 감추기
	$(window).scroll(function(){ 
	    let menuicon = document.getElementById("menuicon");
	    menuicon.checked=false;
	});
</script>

<div class="emptyArea"></div> <!-- 3.3 -->


<div class="titleArea"> <!-- 3.3 -->
