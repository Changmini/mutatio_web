<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mutatio.sis.question.dao.IQuestionDao">

	<sql id="search">
		<if test='@org.apache.commons.lang3.StringUtils@isNotBlank(searchWord)'>
			<choose>
				<when test='searchType == "T"'>
					AND ques_title LIKE '%' || #{searchWord} || '%'
				</when>
				<when test='searchType == "W"'>
					AND ques_writer LIKE '%' || #{searchWord} || '%'
				</when>
				<when test='searchType == "C"'>
					AND ques_content LIKE '%' || #{searchWord} || '%'
				</when>
			</choose>
		</if>
		
		<if test='@org.apache.commons.lang3.StringUtils@isNotBlank(searchCategory)'>
			AND ques_category = #{searchCategory}
		</if>
	</sql>

 	
	<select id="getTotalRowCount" parameterType="com.mutatio.sis.question.vo.QuestionSearchVO"
									resultType="int">
		SELECT count(*)
		FROM ques_board
		WHERE 1=1
		AND ques_del_yn = 'N'
		<include refid="search"></include>
	</select>

	<select id="getQuesBoardList" parameterType="com.mutatio.sis.question.vo.QuestionSearchVO"
								resultType="com.mutatio.sis.question.vo.QuesVO">
		SELECT *
		FROM (
		    SELECT ROWNUM rnum
		           , A.*
		    FROM (SELECT ques_no
		               , ques_thesis_no
		               , ques_category
		               , ques_title
		               , ques_writer
		               , ques_pass
		               , ques_content
		               , ques_hit
		               , ques_reg_date
		               , ques_mod_date
		               , ques_del_yn
		               , code.comm_nm comm_nm
		        FROM ques_board, code
		        WHERE 1=1
		        AND ques_category = code.comm_cd
		        AND ques_del_yn = 'N'
		        <include refid="search"></include>
		        ORDER BY 1) A)
		WHERE rnum BETWEEN #{startRowNum} AND #{endRowNum}
	</select>

	<select id="getQuesBoard" parameterType="int"
							resultType="com.mutatio.sis.question.vo.QuesVO">
		SELECT ques_no
               , ques_thesis_no
               , ques_category
               , code.comm_nm comm_nm
               , ques_title
               , ques_writer
               , ques_pass
               , ques_content
               , ques_hit
               , ques_reg_date
               , ques_mod_date
               , ques_del_yn
        FROM ques_board, code
        WHERE 1=1
        AND ques_del_yn = 'N'
        AND ques_board.ques_category = code.comm_cd
        AND ques_no = #{quesNo}
	</select>
	
	
	
	<update id="questModify" parameterType="com.mutatio.sis.question.vo.QuesVO">
		UPDATE ques_board
		SET ques_thesis_no  = #{quesThesisNo}
		    , ques_category = #{quesCategory}
		    , ques_title    = #{quesTitle}
		    , ques_content  = #{quesContent}
		    , ques_mod_date = sysdate
		WHERE ques_no = #{quesNo}
	</update>
	
	
	<update id="questDelete" parameterType="com.mutatio.sis.question.vo.QuesVO">
		UPDATE ques_board
		SET ques_del_yn = 'Y'
		WHERE ques_no    = #{quesNo}
	</update>
	
	
	<insert id="insertQuesBoard" parameterType="com.mutatio.sis.question.vo.QuesVO">
		INSERT INTO ques_board (
		      ques_no
		    , ques_thesis_no
		    , ques_category
		    , ques_title
		    , ques_writer
		    , ques_content
		    , ques_hit
		    , ques_reg_date
		    , ques_del_yn
		) VALUES (
		     seq_ques_no.nextval
		    , #{quesThesisNo}
		    , #{quesCategory}
		    , #{quesTitle}
		    , #{quesWriter}
		    , #{quesContent}
		     , 0
		    , sysdate
		    , 'N'
		)
	</insert>


</mapper>











