.contents{
    width: 100%;
    height: 1000px;
    display: flex;
}

.center, .left, .right  {
	width: 33%;
	height: 100%;
    margin-top: 50px;
}

.center {
	width: 500px;
}

.myInfo_form {
    position: relative;
    top: 40%;
    width: 400px;
    z-index: 2;
}
.myInfo_form > h1 {
    color: black;
    font-size: 27px;
    margin-bottom: 35px;
    margin-top: 50px;
}

/* REVISE 버튼 */
.btn-area {
	margin-top: 60px;
	height: 100px;
}

.btn-area > button {
    width: 80%;
    height: 50px;
    color: #fff;
    font-size: 23px;
    border: none;
    border-radius: 20px;
    background-color: #166cea;
    padding: 0 0 5px 5px;
    display: block;
}





/* 회원정보 박스 */
.center > .textArea {
	width: 100%;
	height: 870px;
    border: solid 2px black;
    border-radius: 10px;
}

.myInfo_form {
	top: 10px;
}

/* id 수정 */
.id-area {
	background-color: transparent;
	width: 420px;
	height: 50px;
	margin-top: 10px;
	text-align: left;
}

.id-area > label {
	font-size: 18px;
	color: #166cea;	
	top: -15px;
}
.nm-area, .bir-area, .job-area, .cc-area, .ma-area {
	text-align: left;
	margin-top: 50px;
}

/* 라벨 */
/* 직업 */
.job-area > label {
	color: #166cea;
