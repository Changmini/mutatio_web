table.table-design {
	width:100%;
	border-collapse: collapse;
	text-align: left;
	line-height: 1.5;
	border-bottom: 1px solid #ccc;
}
table.table-design > thead th {
	padding: 10px;
	padding-top: 13px;
	font-weight: bold;
	vertical-align: top;
	color: #ffffff;
	background: #000000;
	border-bottom: 2px solid #c00;
	margin: 20px 10px;
	text-align:center;
}
table.table-design tbody th {
	width: 5%;
	padding: 10px;
}
table.table-design td {
	width: 20%;
	padding: 10px;
	vertical-align: top;
}
table.table-design .even {
	background: #dfe1db;
}

