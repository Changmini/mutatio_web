input[type="radio"] {display: none;}
input[type="radio"] + label{
	display: inline-block;
	padding:20px;
	background:#ccc;
	color: #999;
	font-size: 14px;
	border-radius : 10px;
	cursor: pointer;
}
input[type="radio"]:checked + label {
	background: #aaa;
	color: #000;
}


.his_indiv_menu > input[type="radio"] + label{
	padding : 14px;
	background:white;
	font-size : 15px;
	font-weight : 500;
	color : black;
	border-right : 2px solid lightgray;
	border-radius : 0px;
	cursor : pointer;
}

.his_indiv_menu > input[type="radio"]:checked + label{
	color:#2FAF53;
	background :white;
}

.his_indiv_menu > label:hover{
	color :#2FAF53;
}

.his_indiv_menu > label:first-child{
	border-left : 2px solid lightgray;
}





