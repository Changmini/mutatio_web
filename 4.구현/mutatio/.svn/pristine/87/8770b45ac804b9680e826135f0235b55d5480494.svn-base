@charset "UTF-8";

/*CSS for a really simple responsive grid*/
#searchBackground{font-family:Open Sans; color:#555555;}

//--------------------------------------------------
.container {
	width: 70%;
	height:750px; 
	display: inline-flex;
	position: relative;
	text-align : center; 
	left : 22%;
	top: -100px;
	margin: 0px;
}

.page-header{
	width: 100%;
	height: 650px;
	text-align : center;
}
.form-out{
	padding: 50px;
}
.elem-1 {
	width: 1000px;
	text-align: left;
}
.div_cate, .div_thesNo, .div_title {
	display: flex;
	margin: 10px 0px 10px 0px;
}

.div_cate > p, .div_thesNo > p, .div_title > p {
	width: 70px;
	margin: 0px;
	text-align: center;
	margin-right: 25px;
}


input + span, div + span, select + span{
	font: bold;
	color: red;
}



select{
	padding : 5px;
	margin: 0px;
}

input[type=text]{
	padding : 5px;
	border-radius : 9px;
	border-width : thin;
	width : 700px;
	margin:0px;
}
.pull{
	width: 1000px;
	display: flex;
	margin-top: 20px;
}
.div_left{
	text-align: left;
	padding-left: 50px;
	margin:0px;
	width: 450px;
}
.div_right{
	text-align: right;
	padding-right: 50px;
	margin:0px;
	width: 450px;
}

